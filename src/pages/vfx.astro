---
import '../styles/global.css';
import { Image } from 'astro:assets';
import { websiteSettings as websiteSettingsFromData } from '../data/collections';
import headacheVisuals from '../assets/videoImage/headacheVisuals.png';
import flockVisuals from '../assets/videoImage/flocks.png';

const websiteSettings = websiteSettingsFromData
---

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href={websiteSettings.favIconUrl} />
    <title>VFX - {websiteSettings.name}</title>
</head>
<body class="bg-white dark:bg-black">
<!-- Header -->
<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-black/80 backdrop-blur-sm">
    <nav class="mx-auto px-4 sm:px-6 py-4 sm:py-8">
        <div class="flex justify-between items-center">
            <a href="/" class="text-black dark:text-white text-lg sm:text-xl tracking-wide">{websiteSettings.name}</a>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex space-x-8">
                <a href="/collections" class="text-black dark:text-white hover:opacity-70 transition-opacity tracking-wide">Collections</a>
                <a href="/vfx" class="text-black dark:text-white hover:opacity-70 transition-opacity tracking-wide">VFX</a>
                <a href="/contact" class="text-black dark:text-white hover:opacity-70 transition-opacity tracking-wide">Contact</a>
            </div>

            <!-- Mobile Menu Button -->
            <button id="mobile-menu-button" class="md:hidden text-black dark:text-white">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-200 dark:border-gray-700">
            <div class="flex flex-col space-y-4 pt-4">
                <a href="/collections" class="text-black dark:text-white hover:opacity-70 transition-opacity tracking-wide">Collections</a>
                <a href="/vfx" class="text-black dark:text-white hover:opacity-70 transition-opacity tracking-wide">VFX</a>
                <a href="/contact" class="text-black dark:text-white hover:opacity-70 transition-opacity tracking-wide">Contact</a>
            </div>
        </div>
    </nav>
</header>

<!-- Main Content -->
<main class="pt-16 pb-16 sm:pb-32 px-4 sm:px-6" style="margin-bottom: 50px;">
    <div class="mx-auto">

        <a href="/walking-around" class="w-full md:w-1/2 max-w-[1000px] flex flex-col justify-center items-center text-left mx-auto mt-14 md:mt-28">
            <Image
                    src={headacheVisuals}
                    alt={""}
                    class="w-full h-[500px] object-cover"
                    width={1000}
                    height={500}
                    format="webp"
                    quality={100}
                    loading="lazy"
            />
            <div class="text-black dark:text-white w-full text-xs sm:text-sm mt-2">
                <p>Walking Aroung</p>
                <p>Aleix Díaz Llabrés</p>
                <p class="text-gray-600 dark:text-gray-400">Truisms 4 Dummies - Headache</p>
            </div>
        </a>

        <a href="/flocks" class="w-full md:w-1/2 max-w-[1000px] flex flex-col justify-center items-center text-left mx-auto mt-14 md:mt-28">
            <Image
                    src={flockVisuals}
                    alt={""}
                    class="w-full h-[500px] object-cover"
                    width={1000}
                    height={500}
                    format="webp"
                    quality={100}
                    loading="lazy"
            />
            <div class="text-black dark:text-white w-full text-xs sm:text-sm mt-2">
                <p>Flocks</p>
                <p>Aleix Díaz Llabrés</p>
                <p class="text-gray-600 dark:text-gray-400">Inta - Aloka</p>
            </div>
        </a>

    </div>


</main>

<!-- Mobile Menu JavaScript -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', function() {
                mobileMenu.classList.toggle('hidden');
            });
        }
    });
</script>
</body>
</html>